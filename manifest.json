{
	"manifest_version": 2,
	"name": "__MSG_extensionName__",
	"version": "0.6.5.3",
	"author": "Martin Antrag, Christoph Lehnberger",
	"homepage_url":"https://github.com/hitzi/HTTP-Header-Live",
	"default_locale": "en",
	"options_ui": {
		"page": "options.html"
	},
	"icons": {
		"64": "icons/64.png"
	},
	"description": "__MSG_extensionDescription__",
	"permissions": [
		"storage",
		"activeTab",
		"webRequest",
		"webRequestBlocking",
		"tabs",
		"downloads",
		"<all_urls>"
	],
	"sidebar_action": {
		"default_icon": "icons/icon.svg",
		"default_title" : "__MSG_extensionName__",
		"default_panel": "HTTPHeaderMain.html"
	},
	"browser_action": {
		"default_title": "__MSG_extensionName__",
		"default_icon": {
			"64": "icons/64.png"
		}
	},
    "browser_specific_settings": {
        "gecko": {
            "id": "{ed102056-8b4f-43a9-99cd-ad1b25aae87e}",
            "data_collection_permissions": {
              "required": [
                 "browsingActivity"
              ],
              "optional": [
                 "technicalAndInteraction"
              ]
             }
          }
      },
	"background": {
		"scripts": ["background.js"]
	}
}
